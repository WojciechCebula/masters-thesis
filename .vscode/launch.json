    "version": "0.2.0",
    "configurations": [
        {
            "name": "Train",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/scripts",
            "module": "train",
            "console": "integratedTerminal",
            "args": [
                "experiment=imagecas-topo-64-huber"
            ],
            "justMyCode": false
        },
        {
            "name": "Preprocess",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/scripts",
            "module": "preprocess",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Debug",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "debug.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--logdir",
                "scripts/logs"
            ]
        }
    ]
}